{% extends 'base.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <!-- Profil entreprise -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5>Mon Entreprise</h5>
                </div>
                <div class="card-body">
                    {% if company is defined and company %}
                        <h4 class="text-center">{{ company.name ?? '' }}</h4>
                        
                        {% if company.description is defined %}
                        <p class="text-muted text-center">{{ company.description|slice(0, 50) }}...</p>
                        {% endif %}
                        
                        <ul class="list-group list-group-flush mt-3">
                            {% if company.contact_mail is defined %}
                            <li class="list-group-item">
                                <strong>Email:</strong> {{ company.contact_mail }}
                            </li>
                            {% endif %}
                            
                            {% if company.contact_phone is defined %}
                            <li class="list-group-item">
                                <strong>Téléphone:</strong> {{ company.contact_phone }}
                            </li>
                            {% endif %}
                        </ul>
                        
                        <div class="mt-3 text-center">
                            <a href="{{ path('edit_company_page', {'id': company.id}) }}" class="btn btn-outline-primary btn-sm">
                                Modifier
                            </a>
                        </div>
                    {% else %}
                        <div class="alert alert-warning">
                            Aucune entreprise associée.
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Statistiques simplifiées -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5>Statistiques</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h3>{{ offers|length }}</h3>
                        <p class="text-muted">Offres publiées</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Contenu principal adapté -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Gestion des offres</h5>
                </div>
                <div class="card-body">
                    {% if offers is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Titre</th>
                                        <th>Date</th>
                                        <th>Salaire</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for offer in offers %}
                                        <tr>
                                            <td>{{ offer.title ?? '' }}</td>
                                            <td>{{ offer.start_date|date('d/m/Y') }}</td>
                                            <td>{{ offer.salary }} €</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('offer_show', {'id': offer.id}) }}" class="btn btn-outline-primary">
                                                        Voir
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            Aucune offre publiée.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block styles %}
    <style>
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        .nav-tabs .nav-link {
            font-weight: 500;
        }
        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
        }
        .table th {
            border-top: none;
        }
        .accordion .card-header {
            background-color: #f8f9fa;
        }
        .accordion .btn-link {
            color: #495057;
            text-decoration: none;
            width: 100%;
            text-align: left;
        }
        .star-rating {
            color: #ffc107;
        }
    </style>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        // Marquer les candidatures comme lues lorsqu'elles sont affichées
        $(document).ready(function() {
            $('.collapse').on('shown.bs.collapse', function() {
                var offerId = $(this).attr('id').replace('collapse', '');
                // Ici, vous pourriez faire un appel AJAX pour marquer les candidatures comme lues
                // $.post('/mark-applications-as-read/' + offerId);
            });
        });
    </script>
{% endblock %}